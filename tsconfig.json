{
	"include": ["./src"],
	"compileOnSave": false,
	"compilerOptions": {
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"noFallthroughCasesInSwitch": true,
		"sourceMap": true,
		"declaration": true,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"target": "ES2020",
		"module": "ES2020",
		"lib": ["ES2020", "DOM"]
	}
}
